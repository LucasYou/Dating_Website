<!doctype html>
<html lang="en">

<head>
    {{> head_element }}
</head>

<body>
    {{> header }}
    <div class="container" style="margin-top : 50px">
        <h1 style="margin: 0px 0px 30px 20px;">All Employee</h1>

        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>SSN</th>
                    <th>Role</th>
                    <th>Start Date</th>
                    <th>Hourly Rate</th>
                    <th>
                        <a href="add-employee.hbs" class="btn btn-primary btn-block" style="border-radius:24px; font-family: 'Gaegu';"> Add a new employee</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each employees}}
                <tr>
                    <td>{{firstname}}</td>
                    <td>{{lastname}}</td>
                    <td>{{ssn}}</td>
                    <td>{{role}}</td>
                    <td>{{start_date}}</td>
                    <td>{{hourly_rate}}</td>
                    <td solspan="2" style="text-align:center; width:30%;">
                        <a href="edit-employee/{{ssn}}" style="font-family: 'Gaegu';border-radius:24px; margin-right:10px;" class="btn btn-success">Edit</a>
                        <a href="delete-employee/{{ssn}}" style="font-family: 'Gaegu';border-radius:24px; margin-right:10px;" class="btn btn-danger">Delete</a>
                        <a href="employee-mail-list/{{ssn}}" style="font-family: 'Gaegu';border-radius:24px; margin-right:10px;" class="btn btn-primary">Mailing List</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>SSN</th>
                    <th>Role</th>
                    <th>Start Date</th>
                    <th>Hourly Rate</th>

                    <th>
                        <a href="add-user.hbs" class="btn btn-primary btn-block" style="border-radius:24px; font-family: 'Gaegu';"> Add a new employee</a>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

    {{> table_script }}
</body>

</html>