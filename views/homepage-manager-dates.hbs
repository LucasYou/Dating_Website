<!doctype html>
<html lang="en">

<head>
    {{> head_element }}
</head>

<body>
    {{> header }}
    <div class="container" style="margin-top : 50px">
        <h1 style="margin: 0px 0px 30px 20px;">Dates</h1>

        <table id="example" class="table table-striped table-bordered" style="width:165%">
            <thead>
                <tr>
                    <th>User A</th>
                    <th>User B</th>
                    <th>Cust Rep</th>
                    <th>Location</th>
                    <th>GLocation</th>
                    <th>Fee</th>
                    <th>Comments</th>
                    <th>Rating(A)</th>
                    <th>Rating(B)</th>
                    <th>Rating(T)</th>
                    <th>Time</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                {{#each dates}}
                <tr>
                    <td>{{profile_a}}</td>
                    <td>{{profile_b}}</td>
                    <td>{{cust_rep}}</td>
                    <td>{{location}}</td>
                    <td>{{geo_location}}</td>
                    <td>{{booking_fee}}</td>
                    <td>{{comments}}</td>
                    <td>{{user1_rating}}</td>
                    <td>{{user2_rating}}</td>
                    <td>{{math user1_rating "+" user2_rating}}</td>
                    <td>{{date_time}}</td>
                    <td>
                        <a href="delete-date?profile_a={{profile_a}}&profile_b={{profile_b}}&date_time={{date_time}}" style="font-family: 'Gaegu';border-radius:24px; margin-right:10px;"
                            class="btn btn-danger">Delete</a>
                    </td>

                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th>User A</th>
                    <th>User B</th>
                    <th>Cust Rep</th>
                    <th>Location</th>
                    <th>GLocation</th>
                    <th>Fee</th>
                    <th>Comments</th>
                    <th>Rating (A)</th>
                    <th>Rating (B)</th>
                    <th>Total Rating</th>
                    <th>Time</th>
                </tr>
            </tfoot>
        </table>
    </div>

    <br/>
    <div>
        <a href="add-date.hbs" class="btn btn-primary btn-block" style="border-radius:24px; font-family: 'Gaegu';"> Record a date</a>
    </div>
    
    {{> table_script }}
</body>

</html>