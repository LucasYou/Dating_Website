<!doctype html>
<html lang="en">

<head>
    {{> head_element }}
</head>

<body>
    {{> header_with_back_button back_url="/homepage-manager-employee.hbs" }}
    <span class="content">
        <div class="container" style="margin-top : 50px">
            <h1 style="margin: 0px 0px 30px 20px;">Mailing List</h1>

            <table id="example" class="table table-striped table-bordered" style="width:165%">
                <thead>
                    <tr>
                        <th>Full name</th>
                        <th>SSN</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{fullname this}}</td>
                        <td>{{ssn}}</td>
                        <td>{{email}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </span>
</body>