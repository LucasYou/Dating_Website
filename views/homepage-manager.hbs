<!doctype html>
<html lang="en">

<head>
    {{> head_element }}
</head>

<body>
    {{> header }}
    <div class="container" style="margin-top : 50px">
        <h1 style="margin: 0px 0px 30px 20px;">All Users</h1>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>SSN</th>
                    <th>PPP</th>
                    <th>Rating</th>
                    <th>Last Active</th>
                    <th>
                        <a href="add-user.hbs" class="btn btn-primary btn-block" style="border-radius:24px; font-family: 'Gaegu';"> Add a new user</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{firstname}}</td>
                    <td>{{lastname}}</td>
                    <td>{{ssn}}</td>
                    <td>{{ppp}}</td>
                    <td>{{rating}}</td>
                    <td>{{date_of_last_act}}</td>

                    <td solspan="2" style="text-align:center; width:20%;">
                        <a href="edit-user/{{ssn}}" style="font-family: 'Gaegu';border-radius:24px; margin-right:15px;" class="btn btn-success">Edit</a>
                        <a href="delete-user/{{ssn}}" style="font-family: 'Gaegu';border-radius:24px;" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>SSN</th>
                    <th>PPP</th>
                    <th>Rating</th>
                    <th>Last Active</th>
                    <th>
                        <a href="add-user.hbs" class="btn btn-primary btn-block" style="border-radius:24px; font-family: 'Gaegu';"> Add a new user</a>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

    {{> table_script }}
</body>

</html>