	<div class="container" style="margin-top : 50px">
        <h1 style="margin: 0px 0px 30px 20px;">All Profiles</h1>

		<table id="example" class="table table-striped table-bordered" style="width:178%">
		        <thead>
		            <tr>
                            <th>Profile Id</th>
                            <th>Owner SSN</th>
    		                <th>Age</th>
    		                <th>Age Start</th>
    		                <th>Age End</th>
                            <th>Gender</th>
                            <th>Hobbies</th>
                            <th>Height</th>
                            <th>Weight</th>
                            <th>Hair Color</th>
                            <th>Creation Date</th>
                            <th>Last Mod Date</th>
                            <th>Actions</th>

		            </tr>
		        </thead>
		        <tbody>
                    {{#each profiles}}
                        <tr>
                            <td>{{profile_id}}</td>
                            <td>{{owner_ssn}}</td>
                            <td>{{age}}</td>
                            <td>{{dating_age_range_start}}</td>
                            <td>{{dating_age_range_end}}</td>
                            <td>{{gender}}</td>
                            <td>{{hobbies}}</td>
                            <td>{{heights}}</td>
                            <td>{{weight}}</td>
                            <td>{{hair_color}}</td>
                            <td>{{creation_date}}</td>
                            <td>{{last_mod_date}}</td>
                            <td solspan="4" style="text-align:center; width:20%;">
                                <a href="like/{{user_ssn}}" style="font-family: 'Gaegu';border-radius:24px;" class="btn btn-warning">Like</a>
                                <a href="/homepage-user-pending/{{owner_ssn}}" style="font-family: 'Gaegu';border-radius:24px;" class="btn btn-info">Pending Date</a>
                                <a href="/homepage-user-pass/{{owner_ssn}}" style="font-family: 'Gaegu';border-radius:24px;" class="btn btn-dark">Pass Date</a>
                                <a href="delete-user/{{owner_ssn}}" style="font-family: 'Gaegu';border-radius:24px;" class="btn btn-primary">Date!</a>
                            </td>


                        </tr>
                    {{/each}}
		        </tbody>
		        <tfoot>
		            <tr>
                        <th>Profile Id</th>
                        <th>Owner SSN</th>
                        <th>Age</th>
                        <th>Age Start</th>
                        <th>Age End</th>
                        <th>Gender</th>
                        <th>Hobbies</th>
                        <th>Height</th>
                        <th>Weight</th>
                        <th>Hair Color</th>
                        <th>Creation Date</th>
                        <th>Last Mod Date</th>
                        <th>Actions</th>
		            </tr>
		        </tfoot>
		    </table>
	</div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js" ></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" ></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
	<script>
		$(document).ready(function() {
	    $('#example').DataTable();
	});
    $(document).ready(function() {
    var table = $('#example').DataTable();
    $('#example tbody').on( 'mouseenter', 'td', function () {
        var colIdx = table.cell(this).index().column;

        $( table.cells().nodes() ).removeClass( 'highlight' );
        $( table.column( colIdx ).nodes() ).addClass( 'highlight' );
        });
    });


	</script>
  </body>
