<!doctype html>
<html lang="en">

<head>
    {{> head_element }}
</head>

<body>
    {{> header_with_back_button back_url="/homepage-manager-employee.hbs" }}
    <span class="content">
        <form class="form-signin" method="post">
            <h1 class="h3 mb-3 font-weight-normal" style="font-family: 'Gaegu'; margin:15px, 0, 15px, 0;">Add New Employee</h1>
            <label for="SSN">Social Security Number</label>
            <input type="text" id="SSN" name="ssn" class="form-control" placeholder="Social Security Number" required>
            <label for="SSN"></label>

            <label for="Role">Role</label>
            <input type="text" id="Role" name="role" class="form-control" placeholder="Role" required>
            <label for="Role"></label>

            <label for="start_date">Start Date</label>
            <input type="text" id="start_date" name="start_date" class="form-control" placeholder="Start Date (YYYY-MM-DD)" required>
            <label for="start_date"></label>

            <label for="hourly_rate">Hourly Rate</label>
            <input type="text" id="hourly_rate" name="hourly_rate" class="form-control" placeholder="Hourly Rate" required>
            <label for="v"></label>

            <button class="btn btn-lg btn-success btn-block" type="submit">Confirm</button>
        </form>
    </span>
</body>