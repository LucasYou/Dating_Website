<!doctype html>
<html lang="en">

<head>
    {{> head_element }}
</head>

<body>
    {{> header_with_back_button back_url="/homepage-manager-employee.hbs" }}
    <span class="content">
        <form class="form-signin" method="post">
            <h1 class="h3 mb-3 font-weight-normal" style="font-family: 'Gaegu'; margin:15px, 0, 15px, 0;">Edit Employee</h1>
            <fieldset disabled>
                <label for="SSN">Social Security Number</label>
                <input type="text" id="SSN" name="ssn" class="form-control" value="{{employees.0.ssn}}" required>
            </fieldset>

            <label for="Role">Role</label>
            <input type="text" id="Role" name="role" class="form-control" value="{{employees.0.role}}" required>
            <label for="Role"></label>

            <label for="start_date">Start Date</label>
            <input type="text" id="start_date" name="start_date" class="form-control" value="{{employees.0.start_date}}" required>
            <label for="start_date"></label>

            <label for="hourly_rate">Hourly Rate</label>
            <input type="text" id="hourly_rate" name="hourly_rate" class="form-control" value="{{employees.0.hourly_rate}}" required>
            <label for="hourly_rate"></label>

            <button class="btn btn-lg btn-success btn-block" type="submit">Confirm</button>

        </form>
    </span>
</body>